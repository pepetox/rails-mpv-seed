<!DOCTYPE html>
<html>
<head>
  <title>Railssuperseed</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
<div class="header">


    <nav class="light-blue lighten-1" role="navigation">
    <div class="nav-wrapper container"><%= link_to t("MPV_Seed"), root_path, class: "brand-logo" %>

      <ul class="right hide-on-med-and-down">
        <li><%= link_to t("Things"), things_path if user_signed_in? %></li>
        <li><%= link_to "Github", "https://github.com/pepetox/rails-mpv-seed" %></li>
        <% if user_signed_in? %>
          <li>
          <%= current_user.email %>
          </li>
          <li>
          <%= link_to(t('Logout'), destroy_user_session_path, :method => :delete) %>        
          </li>
        <% else %>
          <li>
          <%= link_to(t('Login'), new_user_session_path)  %>  
          </li>
        <% end %>
          <li><%= link_to "English", root_path(locale: "en") unless I18n.locale == :en %></li>
          <li><%= link_to "Español", root_path(locale: "es") unless I18n.locale == :es %></li>
          <li><%= link_to "日本語", root_path(locale: "jp") unless I18n.locale == :jp%> </li>
      </ul>

      <ul id="nav-mobile" class="side-nav">
        <li class="pure-menu-selected"><%= link_to t("Things"), things_path if user_signed_in? %></li>
        
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </nav>
</div>



<%= yield %>

</body>
</html>
